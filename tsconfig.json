{
    "compilerOptions": {
        "target": "esnext",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "noEmit": true,

        "outDir": "dist",

        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "include": ["src/swagger-output.json", "src"],
    // "include": ["src"],
    "exclude": ["node_modules"]
}
